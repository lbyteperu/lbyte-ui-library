{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "types" : ["node"],
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./dist/components"
    ],
  },
  "include": [
    "src/**/*",
    "css-module.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
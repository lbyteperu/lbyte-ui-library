{
  "compilerOptions": {
    "target": "ESNext", // "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext", // "module": "esnext",
    "declaration": true,
    "declarationDir": "dist", // "declarationDir": "build",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
  },
  "include": [
    "src/**/*",
    "css-module.d.ts"
  ],
  "exclude": [
    "src/**/__docs__",
    "src/**/__test__"
  ]
}